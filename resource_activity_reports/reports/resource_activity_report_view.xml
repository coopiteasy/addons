<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_resource_activity_report_pivot" model="ir.ui.view">
            <field name="name">resource.activity.report</field>
            <field name="model">resource.activity.report</field>
            <field name="arch" type="xml">
                <pivot string="Activity">
                    <field name="location_id" type="col"/>
                    <field name="activity_type_id"/>
                    <field name="nb_participants" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="view_resource_activity_report_tree" model="ir.ui.view">
            <field name="name">resource.activity.report</field>
            <field name="model">resource.activity.report</field>
            <field name="arch" type="xml">
                <tree string="Activity">
                    <field name="name"/>
                    <field name="location_id"/>
                    <field name="activity_type_id"/>
                    <field name="analytic_account_id"/>
                    <field name="date_start"/>
                    <field name="nb_participants"/>
                </tree>
            </field>
        </record>

        <record id="view_resource_activity_report_form" model="ir.ui.view">
            <field name="name">resource.activity.report</field>
            <field name="model">resource.activity.report</field>
            <field name="arch" type="xml">
                <form string="Activity">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="location_id"/>
                                <field name="activity_type_id"/>
                                <field name="analytic_account_id"/>
                                <field name="activity_theme_id"/>
                                <field name="project_id"/>
                            </group>
                            <group>
                                <field name="state"/>
                                <field name="registration_state"/>
                                <field name="need_delivery"/>
                                <field name="need_guide"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="nb_participants"/>
                            <field name="nb_bikes"/>
                            <field name="nb_participants_w_bikes"/>
                            <field name="nb_participants_wo_bike"/>
                            <field name="renting_hours"/>
                            <field name="renting_days"/>
                            <field name="total_taxed_amount"/>
                            <field name="total_untaxed_amount"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_resource_activity_report_search" model="ir.ui.view">
            <field name="name">resource.activity.report.search</field>
            <field name="model">resource.activity.report</field>
            <field name="arch" type="xml">
                <search string="Activity">
                    <field name="location_id" string="location" groups="resource_planning.group_multi_location"/>
                    <field name="activity_type_id" string="activity type"
                           groups="resource_planning.group_multi_location"/>
                    <field name="analytic_account_id" string="analytic account"
                           groups="resource_planning.group_multi_location"/>

                    <filter name="is_active" string="Active"
                            domain="[('active', '=', True)]"/>
                    <filter name="is_not_draft" string="Not Draft"
                            domain="[('state', '!=', 'draft')]"/>
                    <filter name="is_not_cancelled" string="Not Cancelled"
                            domain="[('state', '!=', 'cancelled')]"/>
                    <group expand="0" string="Group By">
                        <separator/>
                        <filter string="Day" context="{'group_by':'date_start:day'}"
                                help="Group by day of start date"/>
                        <filter string="Week" context="{'group_by':'date_start:week'}"
                                help="Group by week of start date"/>
                        <filter string="Month" context="{'group_by':'date_start:month'}"
                                help="Group by month of start date"/>
                        <filter string="Year" context="{'group_by':'date_start:year'}"
                                help="Group by year of start date"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_resource_activity_report_stat_all" model="ir.actions.act_window">
            <field name="name">Activity Analysis</field>
            <field name="res_model">resource.activity.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">pivot</field>
            <field name="context">{
                'search_default_is_active': 1,
                'search_default_is_not_draft': 1,
                'search_default_is_not_cancelled': 1,
           }</field>
        </record>

        <menuitem name="Reports" id="menu_resource_activity_reports"
                  parent="resource_planning.menu_main_resource_planning" sequence="35"/>

        <menuitem name="Activity" id="menu_resource_activity_report_all"
                  action="action_resource_activity_report_stat_all"
                  parent="menu_resource_activity_reports" sequence="10"/>

    </data>
</openerp>
