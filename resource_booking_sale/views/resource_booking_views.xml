<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_resource_booking_form" model="ir.ui.view">
        <field name="name">Resource booking form</field>
        <field name="model">resource.booking</field>
        <field name="inherit_id" ref="resource_booking.resource_booking_form" />
        <field name="arch" type="xml">
            <field name="type_id" position="after">
                <field name="product_id" />
            </field>
            <group name='main' position='inside'>
                <group
                    name="sale"
                    string="Sales Order"
                    attrs="{'invisible': [('sale_order_id', '=', False)]}"
                >
                    <field name="sale_order_company_id" invisible="1" />
                    <field name="sale_order_partner_id" invisible="1" />
                    <field name="sale_order_pricelist_id" invisible="1" />

                    <field name="sale_order_id" />
                    <field name="sale_order_state" />
                    <div>
                        <button
                            name="action_sale_order_quotation_send"
                            string="Send Sales Order by Email"
                            class="btn-primary"
                            type="object"
                            attrs="{'invisible': [('sale_order_state', 'not in', ['draft'])]}"
                        />
                        <button
                            name="action_sale_order_confirm"
                            string="Confirm Sales Order"
                            class="btn-primary"
                            type="object"
                            attrs="{'invisible': [('sale_order_state', 'not in', ['sent'])]}"
                        />
                        <button
                            name="action_sale_order_confirm"
                            string="Confirm Sales Order"
                            type="object"
                            attrs="{'invisible': [('sale_order_state', 'not in', ['draft'])]}"
                        />
                        <button
                            name="action_sale_order_quotation_send"
                            string="Send Sales Order by Email"
                            type="object"
                            attrs="{'invisible': [('sale_order_state', 'not in', ['sent','sale'])]}"
                        />
                    </div>
                </group>
                <field
                    name="sale_order_line_ids"
                    widget="section_and_note_one2many"
                    mode="tree,kanban"
                    attrs="{'readonly': [('sale_order_state', 'in', ('done','cancel'))],
                                    'invisible': [('sale_order_id', '=', False)]}"
                >
                    <!--
                        This is effectively copied from the sale module with minimal
                        adjustments.
                    -->
                    <tree string="Sales Order Lines" editable="bottom">
                        <control>
                            <create name="add_product_control" string="Add a product" />
                            <create
                                name="add_section_control"
                                string="Add a section"
                                context="{'default_display_type': 'line_section'}"
                            />
                            <create
                                name="add_note_control"
                                string="Add a note"
                                context="{'default_display_type': 'line_note'}"
                            />
                        </control>

                        <field name="sequence" widget="handle" />
                        <!-- We do not display the type because we don't want the user to be bothered with that information if he has no section or note. -->
                        <field name="display_type" invisible="1" />
                        <field name="product_uom_category_id" invisible="1" />

                        <field name="product_updatable" invisible="1" />
                        <field
                            name="product_id"
                            attrs="{
                                'readonly': [('product_updatable', '=', False)],
                                'required': [('display_type', '=', False)],
                            }"
                            options="{'no_open': True}"
                            force_save="1"
                            context="{
                                'partner_id': parent.sale_order_partner_id,
                                'quantity': product_uom_qty,
                                'pricelist': parent.sale_order_pricelist_id,
                                'uom':product_uom,
                                'company_id': parent.sale_order_company_id,
                                'default_lst_price': price_unit,
                                'default_description_sale': name
                            }"
                            domain="[('sale_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.sale_order_company_id)]"
                            widget="product_configurator"
                        />
                        <field
                            name="product_template_id"
                            string="Product"
                            invisible="1"
                            attrs="{
                                'readonly': [('product_updatable', '=', False)],
                                'required': [('display_type', '=', False)],
                            }"
                            options="{'no_open': True}"
                            context="{
                                'partner_id': parent.sale_order_partner_id,
                                'quantity': product_uom_qty,
                                'pricelist': parent.sale_order_pricelist_id,
                                'uom':product_uom,
                                'company_id': parent.sale_order_company_id,
                                'default_list_price': price_unit,
                                'default_description_sale': name
                            }"
                            domain="[('sale_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.sale_order_company_id)]"
                            widget="product_configurator"
                        />
                        <field
                            name="name"
                            widget="section_and_note_text"
                            optional="show"
                        />
                        <field
                            name="analytic_tag_ids"
                            optional="hide"
                            groups="analytic.group_analytic_tags"
                            widget="many2many_tags"
                            options="{'color_field': 'color'}"
                            domain="['|', ('company_id', '=', False), ('company_id', '=', parent.sale_order_company_id)]"
                        />
                        <field
                            name="product_uom_qty"
                            decoration-info="(not display_type and invoice_status == 'to invoice')"
                            decoration-bf="(not display_type and invoice_status == 'to invoice')"
                            context="{
                                'partner_id': parent.sale_order_partner_id,
                                'quantity': product_uom_qty,
                                'pricelist': parent.sale_order_pricelist_id,
                                'uom': product_uom,
                                'company_id': parent.sale_order_company_id
                            }"
                        />
                        <field
                            name="qty_delivered"
                            decoration-info="(not display_type and invoice_status == 'to invoice')"
                            decoration-bf="(not display_type and invoice_status == 'to invoice')"
                            string="Delivered"
                            attrs="{
                                'column_invisible': [('parent.sale_order_state', 'not in', ['sale', 'done'])],
                                'readonly': [('qty_delivered_method', '!=', 'manual')]
                            }"
                            optional="show"
                        />
                        <field name="qty_delivered_manual" invisible="1" />
                        <field name="qty_delivered_method" invisible="1" />
                        <field
                            name="qty_invoiced"
                            decoration-info="(not display_type and invoice_status == 'to invoice')"
                            decoration-bf="(not display_type and invoice_status == 'to invoice')"
                            string="Invoiced"
                            attrs="{'column_invisible': [('parent.sale_order_state', 'not in', ['sale', 'done'])]}"
                            optional="show"
                        />
                        <field name="qty_to_invoice" invisible="1" />
                        <field name="product_uom_readonly" invisible="1" />
                        <field
                            name="product_uom"
                            force_save="1"
                            string="UoM"
                            attrs="{
                                'readonly': [('product_uom_readonly', '=', True)],
                                'required': [('display_type', '=', False)],
                            }"
                            context="{'company_id': parent.sale_order_company_id}"
                            groups="uom.group_uom"
                            options='{"no_open": True}'
                            optional="show"
                        />
                        <field
                            name="customer_lead"
                            optional="hide"
                            attrs="{'readonly': [('parent.sale_order_state', 'not in', ['draft', 'sent', 'sale'])]}"
                        />
                        <field
                            name="price_unit"
                            attrs="{'readonly': [('qty_invoiced', '&gt;', 0)]}"
                        />
                        <field
                            name="tax_id"
                            widget="many2many_tags"
                            options="{'no_create': True}"
                            domain="[('type_tax_use','=','sale'),('company_id','=',parent.sale_order_company_id)]"
                            context="{'active_test': True}"
                            attrs="{'readonly': [('qty_invoiced', '&gt;', 0)]}"
                            optional="show"
                        />
                        <field
                            name="discount"
                            string="Disc.%"
                            groups="product.group_discount_per_so_line"
                            optional="show"
                            widget="product_discount"
                        />
                        <field
                            name="price_subtotal"
                            widget="monetary"
                            groups="account.group_show_line_subtotals_tax_excluded"
                        />
                        <field
                            name="price_total"
                            widget="monetary"
                            groups="account.group_show_line_subtotals_tax_included"
                        />
                        <field name="state" invisible="1" />
                        <field name="invoice_status" invisible="1" />
                        <field name="currency_id" invisible="1" />
                        <field name="price_tax" invisible="1" />
                        <field name="company_id" invisible="1" />
                    </tree>
                </field>
            </group>
        </field>
    </record>
</odoo>
