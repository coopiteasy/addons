<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="product" inherit_id="website_sale.product">
        <xpath expr="//p[@id='product_public_description']/.." position="after">
            <xpath
                expr="//div[@id='product_details']/../div[hasclass('col-md-6', 'col-xl-8')]/div"
                position="move"
            />
        </xpath>
    </template>
</odoo>
