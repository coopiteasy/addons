<?xml version="1.0" ?>
<odoo>
        <record model="ir.ui.view" id="view_event_track_speaker_form">
        <field name="name">event.track.speaker.form</field>
        <field name="model">event.track.speaker</field>
        <field
            name="inherit_id"
            ref="event_track_multi_speaker.view_event_track_speaker_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="meals" string="Meals">
                    <field name="event_id" invisible="1" />
                    <field name="meal_date_ids" context="{'event_id': event_id}">
                        <tree editable="bottom">
                            <field name="date" />
                            <field name="quantity" />
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
