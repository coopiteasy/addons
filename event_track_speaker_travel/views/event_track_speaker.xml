<?xml version="1.0" ?>
<odoo>


    <record model="ir.ui.view" id="view_event_track_speaker_form">
        <field name="name">event.track.speaker.form</field>
        <field name="model">event.track.speaker</field>
        <field
            name="inherit_id"
            ref="event_track_multi_speaker.view_event_track_speaker_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='tracks']" position="after">
                <page string="Travel" name="travel">
                    <group>
                        <field name="need_travel" />
                        <field name="has_travel" />
                        <field name="travel_cost" />
                    </group>
                    <h2>Bookings</h2>
                    <field name="travel_booking_ids">
                        <tree>
                            <field name="name" />
                            <field name="cost" />
                            <field name="status" />
                        </tree>
                    </field>
                    <h2>Expenses</h2>
                    <field name="travel_expense_ids">
                        <tree>
                            <field name="name" />
                            <field name="expense_type_id" />
                            <field name="quantity" />
                            <field name="cost" />
                            <field name="status" />
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_event_track_speaker_tree">
        <field name="name">event.track.speaker.tree</field>
        <field name="model">event.track.speaker</field>
        <field
            name="inherit_id"
            ref="event_track_multi_speaker.view_event_track_speaker_tree"
        />
        <field name="arch" type="xml">
            <field name="event_id" position="after">
                <field name="need_travel" />
                <field name="has_travel" />
                <field name="travel_cost" />
            </field>
        </field>
    </record>

</odoo>
