<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">cookingo_custom.res_config_settings_view_form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='invoicing_setting_container']" position="after">
                <h2>Deposits</h2>
                <div class="row mt16 o_settings_container" name="deposits_setting_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="container_deposit">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Container Deposit</span>
                            <div class="text-muted">
                                Product used as deposit for containers
                            </div>
                            <div class="text-muted">
                                <field name="container_deposit_product_id" context="{'default_type': 'service'}"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
