<odoo>
    <record id ="cie_infra_datacenter_view" model="ir.ui.view">
        <field name="name">CoopIteasy Infrastructure</field>
        <field name="model">infra.datacenter</field>
        <field name="arch" type="xml">
            <form string="datacenter">
                <header>

                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="location_id" widget="many2one"/>
                        <field name="server_ids" widget="many2many" domain="[('datacenter_id','=',False)]"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_search_datacenter" model="ir.ui.view">
        <field name="name">Datacenter filter</field>
        <field name="model">infra.datacenter</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="location_id"/>
                <field name="server_ids"/>
            </search>
        </field>
    </record>
</odoo>
