<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="invoice_form" model="ir.ui.view">
        <field name="name">account.invoice.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//page[@name='other_info']//field[@name='origin']"
                position="after"
            >
                <field name="origin_so_id" />
                <field name="amount_paid_by_transactions" />
            </xpath>
            <xpath
                expr="//page[@name='other_info']//field[@name='origin']"
                position="attributes"
            >
                <attribute name="invisible">[('origin_so_id', '!=', False)]</attribute>
            </xpath>
        </field>
    </record>
</odoo>
