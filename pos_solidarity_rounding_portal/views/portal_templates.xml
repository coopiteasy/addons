<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
        id="portal_my_details"
        inherit_id="portal.portal_my_details"
        name="Portal user details"
    >
        <xpath expr="//select[@name='state_id']/../.." position="inside">
            <div
                t-attf-class="form-group #{error.get('enable_solidarity_rounding') and 'o_has_error' or ''} col-xl-6"
            >
                <label
                    class="col-form-label"
                    for="enable_solidarity_rounding"
                >Solidarity Rounding</label>
                <input
                    type="checkbox"
                    name="enable_solidarity_rounding"
                    t-attf-class="form-control #{error.get('enable_solidarity_rounding') and 'is-invalid' or ''}"
                    t-att-checked="'1' if (enable_solidarity_rounding or partner.enable_solidarity_rounding) else None"
                />
            </div>
        </xpath>
    </template>
</odoo>
