<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="product_remove" inherit_id="website_sale_product_description.product">
        <xpath expr="//p[@id='product_public_description']" position="replace">
        </xpath>
    </template>
    <template id="product" inherit_id="website_sale.product">
        <xpath
            expr="//div[@id='product_details']/../div[hasclass('col-md-6', 'col-xl-8')]/t"
            position="before"
        >
            <div id="public_description" class="o_not_editable">
                <p
                    t-field="product.public_description"
                    id="product_public_description"
                />
            </div>
        </xpath>
    </template>
</odoo>
