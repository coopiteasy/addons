<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="sale_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">container_meals.sale_res_config_settings_view_form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='invoicing_setting_container']" position="after">
                <h2>Deposits</h2>
                <div
                    class="row mt16 o_settings_container"
                    name="deposits_setting_container"
                >
                    <div class="col-12 col-lg-6 o_setting_box" id="container_deposit">
                        <div class="o_setting_right_pane">
                            <label
                                for="container_deposit_product_id"
                                string="Container Deposit"
                            />
                            <div class="text-muted">
                                Product used as deposit for containers
                            </div>
                            <div class="content-group">
                                <div class="mt8">
                                    <field
                                        name="container_deposit_product_id"
                                        context="{'default_type': 'service'}"
                                    />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
    <record id="product_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">container_meals.product_res_config_settings_view_form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="product.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <div id="product_general_settings" position="inside">
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    id="child_portion_size_ratio"
                >
                    <div class="o_setting_right_pane">
                        <label
                            for="child_portion_size_ratio"
                            string="Child Portion Size Ratio"
                        />
                        <div class="text-muted">
                            How big a child portion is compared to an adult portion, typically a value under 1.
                        </div>
                        <div class="content-group">
                            <div class="mt8">
                                <field name="child_portion_size_ratio" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

</odoo>
