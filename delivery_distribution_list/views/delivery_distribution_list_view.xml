<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_ddl_form" model="ir.ui.view">
        <field name="name">delivery.distribution.list.form</field>
        <field name="model">delivery.distribution.list</field>
        <field name="arch" type="xml">
            <form string="Distribution list">
                <header>
                    <button
                        name="generate_distribution_list"
                        string="Generate List"
                        type="object"
                        states="draft"
                        class="btn-primary"
                    />
                    <button
                        name="action_validate"
                        string="Validate List"
                        type="object"
                        states="draft"
                    />
                    <button
                        name="action_draft"
                        string="Back to Draft"
                        type="object"
                        states="validated"
                    />
                    <button
                        name="action_sale"
                        string="Generate Sale Order"
                        type="object"
                        states="validated"
                        class="btn-primary"
                    />
                    <button
                        name="action_send_sale_order"
                        string="Send SO by Email"
                        type="object"
                        states="sale"
                        class="btn-primary"
                    />
                    <button
                        name="action_invoice"
                        string="Generate Invoice"
                        type="object"
                        states="sale,sale_sent"
                        class="btn-primary"
                    />
                    <button
                        name="action_validate_invoice"
                        string="Validate Invoice"
                        type="object"
                        states="invoiced"
                        class="btn-primary"
                    />
                    <button
                        name="action_send_invoice"
                        string="Send Invoice by Email"
                        type="object"
                        states="invoice_validated"
                        class="btn-primary"
                    />
                    <button
                        name="action_done"
                        string="Done"
                        type="object"
                        states="invoice_sent"
                    />
                    <field
                        name="state"
                        widget="statusbar"
                        statusbar_visible="draft,validated,sale,invoiced,done"
                    />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="distribution_date" />
                            <field name="product_id" />
                            <field
                                name="journal_id"
                                attrs="{'readonly':[('state','in',['invoiced','invoice_validated','invoice_sent','done'])]}"
                            />
                        </group>
                        <group>
                            <field name="create_date" />
                            <field name="user_id" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Distribution Lines">
                            <field
                                name="distribution_lines"
                                context="{'default_product_id':product_id}"
                                attrs="{'readonly': [('state', 'in', ['done','invoiced','invoice_sent'])]}"
                            >
                                <tree editable="bottom">
                                    <field name="date" readonly="1" />
                                    <field
                                        name="partner_id"
                                        attrs="{'readonly': [('state', '!=', 'draft')]}"
                                    />
                                    <field
                                        name="product_id"
                                        attrs="{'readonly': [('state', '!=', 'draft')]}"
                                    />
                                    <field
                                        name="ordered_qty"
                                        attrs="{'readonly': [('state', '!=', 'draft')]}"
                                    />
                                    <field name="product_uom" groups="uom.group_uom" />
                                    <field
                                        name="delivered_qty"
                                        attrs="{'readonly': [('state', 'not in', ['draft','validated'])]}"
                                    />
                                    <field
                                        name="returned_qty"
                                        attrs="{'readonly': [('state', 'not in', ['draft','validated','sale','sale_sent'])]}"
                                    />
                                    <field name="sold_qty" />
                                    <field
                                        name="carrier_id"
                                        attrs="{'readonly': [('state', '!=', 'draft')]}"
                                    />
                                    <field name="state" />
                                    <button
                                        type="object"
                                        name="action_validate"
                                        states="draft"
                                        groups="delivery_distribution_list.group_distribution_user"
                                        help="Validate"
                                        icon="STOCK_MEDIA_PLAY"
                                    />
                                    <button
                                        type="object"
                                        name="action_draft"
                                        states="validated"
                                        groups="delivery_distribution_list.group_distribution_user"
                                        help="Draft"
                                        icon="gtk-cancel"
                                    />
                                    <button
                                        type="object"
                                        name="generate_sale_order"
                                        states="validated"
                                        groups="delivery_distribution_list.group_distribution_user"
                                        help="Generate sale order"
                                        icon="gtk-apply"
                                    />
                                    <button
                                        type="object"
                                        name="send_sale_order"
                                        states="sale"
                                        groups="delivery_distribution_list.group_distribution_user"
                                        help="Send sale order"
                                        icon="terp-mail-message-new"
                                    />
                                    <button
                                        type="object"
                                        name="invoice_sale_order"
                                        states="sale,sale_sent"
                                        groups="delivery_distribution_list.group_distribution_user"
                                        help="Invoice"
                                        icon="STOCK_MEDIA_PLAY"
                                    />
                                    <button
                                        type="object"
                                        name="validate_invoice"
                                        states="invoiced"
                                        groups="delivery_distribution_list.group_distribution_user"
                                        help="Validate Invoice"
                                        icon="gtk-apply"
                                    />
                                    <button
                                        type="object"
                                        name="send_invoice"
                                        states="invoice_validated"
                                        groups="delivery_distribution_list.group_distribution_user"
                                        help="Send Invoice"
                                        icon="terp-mail-message-new"
                                    />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_ddl_tree" model="ir.ui.view">
        <field name="name">delivery.distribution.list.tree</field>
        <field name="model">delivery.distribution.list</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="distribution_date" />
                <field name="product_id" />
                <field name="user_id" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="view_ddl_filter" model="ir.ui.view">
        <field name="name">delivery.distribution.list.select</field>
        <field name="model">delivery.distribution.list</field>
        <field name="arch" type="xml">
            <search string="Search Distribution List">
                <field name="user_id" />
                <field name="product_id" />
                <filter
                    string="My Distribution list"
                    domain="[('user_id','=',uid)]"
                    name="my_distribution_list_filter"
                />
                <separator />
                <filter
                    string="Draft"
                    name="draft"
                    domain="[('state','=','draft')]"
                    help="Distribution list that haven't yet been confirmed"
                />
                <filter
                    string="Sale Order Genereated"
                    name="sales"
                    domain="[('state','=','sale')]"
                />
                <separator />
                <filter
                    name="invoiced"
                    string="Invoiced"
                    domain="[('state','in',['invoiced','invoice_sent'])]"
                />
                <filter
                    name="invoices_validated"
                    string="Invoices validated"
                    domain="[('state','=','invoice_validated')]"
                />
                <separator />
                <group name="group_by" string="Group By">
                    <filter
                        name="responsible"
                        string="Responsible"
                        domain="[]"
                        context="{'group_by':'user_id'}"
                    />
                    <filter
                        name="created_month"
                        string="Created Month"
                        domain="[]"
                        context="{'group_by':'create_date'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <record id="action_ddl" model="ir.actions.act_window">
        <field name="name">Delivery Distribution List</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">delivery.distribution.list</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_ddl_filter" />
    </record>

    <menuitem
        action="action_ddl"
        id="menu_ddl"
        parent="menu_delivery_distribution"
        groups="delivery_distribution_list.group_distribution_user"
        sequence="5"
    />

    <record id="view_distribution_line_tree" model="ir.ui.view">
        <field name="name">delivery.distribution.line.tree</field>
        <field name="model">delivery.distribution.line</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="distribution_list_id" />
                <field name="date" />
                <field name="partner_id" />
                <field name="product_id" />
                <field name="product_uom" groups="uom.group_uom" />
                <field name="delivered_qty" />
                <field name="returned_qty" />
                <field name="sold_qty" />
                <field name="carrier_id" />
                <field name="sale_order" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="view_ddline_form" model="ir.ui.view">
        <field name="name">delivery.distribution.line.form</field>
        <field name="model">delivery.distribution.line</field>
        <field name="arch" type="xml">
            <form string="Distribution line">
                <header>
                    <field
                        name="state"
                        widget="statusbar"
                        statusbar_visible="draft,validated,sale,invoiced,done"
                    />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field
                                name="partner_id"
                                attrs="{'readonly': [('state', '!=', 'draft')]}"
                            />
                            <field
                                name="product_id"
                                attrs="{'readonly': [('state', '!=', 'draft')]}"
                            />
                            <field
                                name="ordered_qty"
                                attrs="{'readonly': [('state', '!=', 'draft')]}"
                            />
                            <field name="product_uom" groups="uom.group_uom" />
                            <field name="sold_qty" />
                            <field name="sale_order" />
                        </group>
                        <group>
                            <field name="date" />
                            <field name="carrier_id" />
                            <field
                                name="delivered_qty"
                                attrs="{'readonly': [('state', '!=', 'draft')]}"
                            />
                            <field
                                name="returned_qty"
                                attrs="{'readonly': [('state', '!=', 'draft')]}"
                            />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_distribution_line_filter" model="ir.ui.view">
        <field name="name">delivery.distribution.line.select</field>
        <field name="model">delivery.distribution.line</field>
        <field name="arch" type="xml">
            <search string="Search Distribution Lines">
                <field name="product_id" />
                <field name="carrier_id" />
                <field name="partner_id" />
                <field name="distribution_list_id" />
                <separator />
                <filter
                    string="Draft"
                    name="draft"
                    domain="[('state','=','draft')]"
                    help="Distribution list that haven't yet been confirmed"
                />
                <filter
                    string="Sale Order Genereated"
                    name="sales"
                    domain="[('state','=','sale')]"
                />
                <separator />
                <filter
                    string="Invoiced"
                    name="invoiced"
                    domain="[('state','=','invoiced')]"
                />
                <filter
                    string="Invoices validated"
                    name="invoice_validated"
                    domain="[('state','in',['invoice_validated','invoice_sent'])]"
                />
                <separator />
                <group string="Group By">
                    <filter
                        string="Product"
                        name="product"
                        domain="[]"
                        context="{'group_by':'product_id'}"
                    />
                    <filter
                        string="Carrier"
                        name="carrier"
                        domain="[]"
                        context="{'group_by':'carrier_id'}"
                    />
                    <filter
                        string="Created Month"
                        name="created_month"
                        domain="[]"
                        context="{'group_by':'date'}"
                    />
                    <filter
                        string="State"
                        name="state"
                        domain="[]"
                        context="{'group_by':'state'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <record id="action_distribution_line" model="ir.actions.act_window">
        <field name="name">Delivery Distribution Line</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">delivery.distribution.line</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_distribution_line_filter" />
    </record>

    <menuitem
        action="action_distribution_line"
        id="menu_distribution_line"
        parent="menu_delivery_distribution"
        groups="delivery_distribution_list.group_distribution_user"
        sequence="6"
    />
</odoo>
