<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_resource_activity_report_pivot" model="ir.ui.view">
            <field name="name">resource.activity.report</field>
            <field name="model">resource.activity.report</field>
            <field name="arch" type="xml">
                <pivot string="Activity" disable_linking="True">
                    <field name="location_id" type="col"/>
                    <field name="activity_type"/>
                    <field name="total_participants" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="view_resource_activity_report_search" model="ir.ui.view">
            <field name="name">resource.activity.report.search</field>
            <field name="model">resource.activity.report</field>
            <field name="arch" type="xml">
                <search string="Activity">
                    <filter name="need_guide" string="Need Guide"
                            domain="[('need_guide', '=', True)]"/>
                    <filter name="need_delivery" string="Need Delivery"
                            domain="[('need_delivery', '=', True)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Language" context="{'group_by':'lang_id'}"
                                help="Group by language"/>
                        <separator/>
                        <filter string="Day" context="{'group_by':'date_start:day'}"
                                help="Group by day of start date"/>
                        <filter string="Week" context="{'group_by':'date_start:week'}"
                                help="Group by week of start date"/>
                        <filter string="Month" context="{'group_by':'date_start:month'}"
                                help="Group by month of start date"/>
                        <filter string="Year" context="{'group_by':'date_start:year'}"
                                help="Group by year of start date"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_resource_activity_report_stat_all" model="ir.actions.act_window">
            <field name="name">Activity Analysis</field>
            <field name="res_model">resource.activity.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">pivot</field>
            <field name="context">{}</field>  <!-- force empty -->
        </record>

        <menuitem name="Reports" id="menu_resource_activity_reports"
                  parent="resource_planning.menu_main_resource_planning" sequence="35"/>

        <menuitem name="Activity" id="menu_resource_activity_report_all"
                  action="action_resource_activity_report_stat_all"
                  parent="menu_resource_activity_reports" sequence="1"/>

    </data>
</openerp>
