<odoo>

    <record id="project_task_view_rtree" model="ir.ui.view">
        <field name="name">project.task.rtree</field>
        <field name="model">project.task</field>
        <field eval="1" name="priority" />
        <field name="arch" type="xml">
            <rtree>
                <parent
                    parent="project.project"
                    child="project.project"
                    field="parent_id"
                />
                <parent
                    parent="project.project"
                    child="project.task"
                    field="project_id"
                    domain="[('parent_id', '=', False)]"
                />
                <parent parent="project.task" child="project.task" field="parent_id" />
                <field name="name" />
                <field name="milestone_id" />
                <field name="partner_id" optional="hide" />
                <field
                    name="user_ids"
                    optional="show"
                    widget="many2many_avatar_user"
                    domain="[('share', '=', False), ('active', '=', True)]"
                    options='{"no_quick_create": True}'
                />
                <field
                    name="activity_ids"
                    string="Next Activity"
                    widget="list_activity"
                    optional="show"
                />
                <field
                    name="tag_ids"
                    widget="many2many_tags"
                    options="{'color_field': 'color'}"
                    optional="show"
                />
                <field
                    name="kanban_state"
                    widget="state_selection"
                    optional="show"
                    options="{'hide_label': True}"
                    nolabel="1"
                    required="0"
                />
                <field name="stage_id" />
            </rtree>
        </field>
    </record>

    <record
        id="project.act_project_project_2_project_task_all"
        model="ir.actions.act_window"
    >
        <field
            name="view_mode"
        >rtree,kanban,tree,form,calendar,pivot,graph,activity</field>
    </record>

    <record id="project.action_view_all_task" model="ir.actions.act_window">
        <field
            name="view_mode"
        >rtree,kanban,tree,form,calendar,pivot,graph,activity</field>
    </record>

    <record
        id="project_task_rtree_action_view_project"
        model="ir.actions.act_window.view"
    >
        <field name="sequence" eval="5" />
        <field name="view_mode">rtree</field>
        <field
            name="act_window_id"
            ref="project.act_project_project_2_project_task_all"
        />
    </record>

    <record id="project_task_rtree_action_view_all" model="ir.actions.act_window.view">
        <field name="sequence" eval="5" />
        <field name="view_mode">rtree</field>
        <field name="act_window_id" ref="project.action_view_all_task" />
    </record>

</odoo>
