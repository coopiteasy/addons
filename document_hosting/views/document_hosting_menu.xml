<odoo>

    <!-- Action to open document list -->
    <act_window id="action_document_hosting"
      name="Document"
      res_model="document_hosting.document"
      view_mode="tree,form" />

    <!-- Action to open category list -->
    <act_window id="action_document_hosting_category"
      name="Categories"
      res_model="document_hosting.category"
      view_mode="tree,form" />

    <!-- Root menu for document -->
    <menuitem id="menu_main_document_hosting"
      name="Documents"
      sequence="45" />

    <!-- Menu item to open Document list -->
    <menuitem id="menu_document"
      name="Documents"
      parent="menu_main_document_hosting"
      action="action_document_hosting" />

    <!-- Menu item to open Category list -->
    <menuitem id="menu_category"
      name="Categories"
      parent="menu_main_document_hosting"
      action="action_document_hosting_category" />

</odoo>
