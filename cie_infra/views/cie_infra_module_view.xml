<odoo>
    <record id ="cie_infra_module_view" model="ir.ui.view">
        <field name="name">CoopIteasy Infrastructure</field>
        <field name="model">infra.instance.module</field>
        <field name="arch" type="xml">
            <form string="module">
                <header>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="module_info_ids" widget="many2many" domain="[('module_id','=',False )]"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_search_module" model="ir.ui.view">
        <field name="name">Database filter</field>
        <field name="model">infra.instance.module</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>
</odoo>
