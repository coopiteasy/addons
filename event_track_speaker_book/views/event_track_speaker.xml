<?xml version="1.0" ?>
<odoo>
        <record model="ir.ui.view" id="view_event_track_speaker_form">
        <field name="name">event.track.speaker.form</field>
        <field name="model">event.track.speaker</field>
        <field
            name="inherit_id"
            ref="event_track_multi_speaker.view_event_track_speaker_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="books" string="Books">
                    <field name="book_ids">
                        <tree>
                            <field name="name" />
                            <field name="author_ids" widget="many2many_tags" />
                            <field name="editor_id" />
                            <field name="speaker_ids" widget="many2many_tags" />
                            <field name="user_id" />
                            <field name="status" />
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
