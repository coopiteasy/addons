<odoo>
    <template id="resource_activity_report_document"
              inherit_id="resource_activity.resource_activity_report_document">
        <xpath expr="//table[@name='registrations']" position="after">
            <div name="delivery" t-if="o.need_delivery">
                <p>
                    <strong>Delivery:</strong>
                    <span t-field="o.delivery_place"/>
                    <span t-field="o.delivery_time"/>
                </p>
                <p>
                    <strong>Pick up:</strong>
                    <span t-field="o.pickup_place"/>
                    <span t-field="o.pickup_time"/>
                </p>
            </div>
        </xpath>
    </template>
</odoo>
