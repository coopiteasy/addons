<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_order_ddl_form" model="ir.ui.view">
            <field name="name">sale.order.form.ddl</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="distribution_carrier_id" />
                    <field name="distribution_list_id" />
                </field>
            </field>
        </record>

        <record id="view_sales_order_filter" model="ir.ui.view">
            <field name="name">sale.order.list.select</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_sales_order_filter" />
            <field name="arch" type="xml">
                <filter name="customer" position="after">
                    <filter
                        name="distribution_carrier_id"
                        string="Carrier"
                        domain="[]"
                        context="{'group_by':'distribution_carrier_id'}"
                    />
                    <filter
                        name="distribution_list_id"
                        string="Distribution List"
                        domain="[]"
                        context="{'group_by':'distribution_list_id'}"
                    />
                </filter>
            </field>
        </record>
    </data>
</odoo>
