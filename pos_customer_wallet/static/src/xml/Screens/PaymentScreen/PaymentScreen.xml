<templates id="template" xml:space="preserve">

    <t
        t-name="PaymentScreen"
        t-inherit="point_of_sale.PaymentScreen"
        t-inherit-mode="extension"
        owl="1"
    >
        <xpath expr="//div[hasclass('payment-name')]" position="after">
            <t t-if="paymentMethod.is_customer_wallet_method">
                <div class="wallet-balance-container">
                    <div class="wallet-balance">
                        <t t-if="currentOrder.get_partner()">
                            <span class="current-wallet-balance">
                                <t
                                    t-esc="env.pos.format_currency(currentOrder.get_partner().customer_wallet_balance)"
                                />
                            </span>
                            <span class="new-wallet-balance">
                                (<t
                                    t-esc="env.pos.format_currency(new_wallet_amount)"
                                />)
                            </span>
                        </t>
                    </div>
                </div>
            </t>
        </xpath>
    </t>
</templates>
