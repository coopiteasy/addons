<odoo>
    <record id ="cie_infra_instance_view" model="ir.ui.view">
        <field name="name">CoopIteasy Infrastructure</field>
        <field name="model">infra.instance</field>
        <field name="arch" type="xml">
            <form string="instance">
                <header>

                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="url" widget="url"/>
                        <field name="server_id" />
                        <field name="database_ids" widget="many2many" domain="[('instance_id','=',False)]" />
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_search_instance" model="ir.ui.view">
        <field name="name">Instance filter</field>
        <field name="model">infra.instance</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="url"/>
                <field name="server_id"/>
                <field name="database_ids"/>
            </search>
        </field>
    </record>
</odoo>
