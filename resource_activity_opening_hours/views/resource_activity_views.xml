<odoo>
    <record id="view_resource_activity_tree" model="ir.ui.view">
        <field name="name">resource.activity.tree</field>
        <field name="model">resource.activity</field>
        <field name="inherit_id" ref="resource_activity.view_resource_activity_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="is_start_outside_opening_hours" invisible="True"/>
                <field name="is_end_outside_opening_hours" invisible="True"/>
            </xpath>
            <!-- fixme migration: use decoration-warning -->
            <field name="date_start" position="attributes">
                <attribute name="fg_color">red:is_start_outside_opening_hours==True;</attribute>
            </field>
            <field name="date_end" position="attributes">
                <attribute name="fg_color">red:is_end_outside_opening_hours==True;</attribute>
            </field>
        </field>
    </record>

    <record id="view_resource_activity_form" model="ir.ui.view">
        <field name="name">resource.activity.form</field>
        <field name="model">resource.activity</field>
        <field name="inherit_id" ref="resource_activity.view_resource_activity_form"/>
        <field name="arch" type="xml">
            <xpath expr="//h1" position="after">
                <div>
                    <!-- fixme migration: use decoration-warning -->
                    <field name="is_start_outside_opening_hours" attrs="{'invisible': 1}"/>
                    <label for="is_start_outside_opening_hours" style="color:Red"
                           attrs="{'invisible': [('is_start_outside_opening_hours', '!=', True)]}"/>
                </div>
                <div>
                    <field name="is_end_outside_opening_hours" attrs="{'invisible': 1}"/>
                    <label for="is_end_outside_opening_hours" style="color:Red"
                           attrs="{'invisible': [('is_end_outside_opening_hours', '!=', True)]}"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
